{
  "appId": "com.cursor-overlay.app",
  "productName": "Cursor Overlay",
  "directories": {
    "output": "release"
  },
  "files": [
    "dist/**/*",
    "assets/**/*",
    "dist.css",
    "index.html",
    "package.json",
    "!src/",
    "!*.md",
    "!**/.git/**",
    "!node_modules/**",
    "!release/**"
  ],
  "asar": {
    "smartUnpack": true
  },
  "asarUnpack": [
    "**/better-sqlite3/**/*",
    "node_modules/better-sqlite3/**/*"
  ],
  "mac": {
    "target": [
      {
        "target": "dmg",
        "arch": ["x64", "arm64"]
      }
    ],
    "category": "public.app-category.productivity",
    "identity": null,
    "entitlements": null,
    "entitlementsInherit": null,
    "hardenedRuntime": false,
    "gatekeeperAssess": false,
    "provisioningProfile": null,
    "sign": false
  }
}
